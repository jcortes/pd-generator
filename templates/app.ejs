import { axios } from "@pipedream/platform";
import constants from "./common/constants.mjs";

export default {
  type: "app",
  app: "<%= app %>",
  propDefinitions: {
    commonProperty: {
      type: "string",
      label: "Common property",
      description: "[See the docs here](https://example.com)",
    },
  },
  methods: {
    async _makeRequest(opts) {
      const {
        $,
        path,
        ...otherOpts
      } = opts;

      const authorization = "Change auth token here";
      const headers = {
        ...otherOpts.headers,
        authorization,
      };

      const url = `${constants.BASE_URL}${constants.VERSION_PATH}${path}`;

      const config = {
        ...otherOpts,
        headers,
        url,
      };

      return await axios($ ?? this, config);
    },
  },
};
